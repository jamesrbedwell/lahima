
<h1 class="section-title"><%= @project.name %></h1>
<h1 class="section-title small">by <%= @project.client.name %></h1>
<div class="box project-details show">
  <h2><%= @project.address1 %></h2>
  <h2><%= @project.city %></h2>
  <h2><%= @project.state %></h2>
  <h2><%= @project.country %></h2>
  <h2><%= @project.post_code %></h2>
  <h3><%= "#{@project.client_contact.full_name} - #{@project.client_contact.phone}" %></h3>
  <div class="client-det-btns">
    <a href="/projects/<%= @project.id %>/edit" class="button">Edit Project Details</a>
    <form action="/projects/<%= @project.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button>Delete Project</button>
    </form>
  </div>
</div>