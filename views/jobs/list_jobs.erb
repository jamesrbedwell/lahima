            <p><%= job.start_date.strftime('%d/%m/%Y') %></p>
            <p><%= job.status.capitalize %></p>
          </div>
        <% end %>
      <% else %>
        <p> No Current Jobs</p>
      <% end %>
    </div>
  
  </div>

</div>