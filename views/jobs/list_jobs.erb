            <p><%= job.start_date.strftime('%d/%m/%Y') %></p>
            <p><%= job.status.capitalize %></p>
          </div>
        <% end %>
      <% else %>
        <p> No Current Jobs</p>
      <% end %>
    </div>
  
  </div>
  <div class="finished-jobs">
    <h1 class="section-title small">Finished Jobs</h1>
    <div class="finished-list list box">
      <% if @finished %> 
        <% @finished.each do |job |%>
